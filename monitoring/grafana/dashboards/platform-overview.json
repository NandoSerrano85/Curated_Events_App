{
  "dashboard": {
    "id": null,
    "title": "Events Platform - Overview",
    "tags": ["events-platform", "overview"],
    "style": "dark",
    "timezone": "browser",
    "editable": true,
    "graphTooltip": 1,
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s",
    
    "panels": [
      {
        "id": 1,
        "title": "Platform Health",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "events_platform:platform_health:percent",
            "legendFormat": "Overall Health"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 80},
                {"color": "green", "value": 95}
              ]
            }
          }
        }
      },
      
      {
        "id": 2,
        "title": "Active Services",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "count(up == 1)",
            "legendFormat": "Services Up"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 5},
                {"color": "green", "value": 8}
              ]
            }
          }
        }
      },
      
      {
        "id": 3,
        "title": "Current Alerts",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "count(ALERTS{alertstate=\"firing\"})",
            "legendFormat": "Active Alerts"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 5}
              ]
            }
          }
        }
      },
      
      {
        "id": 4,
        "title": "Request Rate",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "sum(events_platform:http_requests:rate5m)",
            "legendFormat": "Requests/sec"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      
      {
        "id": 5,
        "title": "Service Response Times",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "events_platform:http_duration:p95",
            "legendFormat": "{{ service }} - P95"
          },
          {
            "expr": "events_platform:http_duration:p50",
            "legendFormat": "{{ service }} - P50"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "pointSize": 3,
              "fillOpacity": 10
            }
          }
        }
      },
      
      {
        "id": 6,
        "title": "Error Rates by Service",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "events_platform:http_error_percentage:rate5m",
            "legendFormat": "{{ service }}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 5},
                {"color": "red", "value": 10}
              ]
            }
          }
        }
      },
      
      {
        "id": 7,
        "title": "System Resources",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "avg(events_platform:cpu_usage:percent)",
            "legendFormat": "CPU Usage %"
          },
          {
            "expr": "avg(events_platform:memory_usage:percent)",
            "legendFormat": "Memory Usage %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "custom": {
              "drawStyle": "line",
              "fillOpacity": 20
            }
          }
        }
      },
      
      {
        "id": 8,
        "title": "Database Connections",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 12},
        "targets": [
          {
            "expr": "pg_stat_activity_count",
            "legendFormat": "PostgreSQL Connections"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "custom": {
              "drawStyle": "line"
            }
          }
        }
      },
      
      {
        "id": 9,
        "title": "Message Queue Stats",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 12},
        "targets": [
          {
            "expr": "events_platform:nats_messages:in_rate5m",
            "legendFormat": "NATS In/sec"
          },
          {
            "expr": "events_platform:kafka_messages:in_rate5m",
            "legendFormat": "Kafka In/sec"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "custom": {
              "drawStyle": "line"
            }
          }
        }
      },
      
      {
        "id": 10,
        "title": "Business Metrics - Last 24h",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "events_platform:events_created:rate1h * 3600",
            "legendFormat": "Events Created/hour"
          },
          {
            "expr": "events_platform:user_registrations:rate1h * 3600",
            "legendFormat": "User Registrations/hour"
          },
          {
            "expr": "events_platform:event_registrations:rate1h * 3600",
            "legendFormat": "Event Registrations/hour"
          },
          {
            "expr": "events_platform:payments_completed:rate1h * 3600",
            "legendFormat": "Payments/hour"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "custom": {
              "drawStyle": "line",
              "fillOpacity": 10
            }
          }
        }
      }
    ]
  },
  
  "templating": {
    "list": [
      {
        "name": "service",
        "type": "query",
        "query": "label_values(up, service)",
        "refresh": 1,
        "includeAll": true,
        "multi": true
      },
      {
        "name": "instance",
        "type": "query", 
        "query": "label_values(up{service=~\"$service\"}, instance)",
        "refresh": 1,
        "includeAll": true,
        "multi": true
      }
    ]
  },
  
  "annotations": {
    "list": [
      {
        "name": "Deployments",
        "enable": true,
        "iconColor": "green",
        "query": "ALERTS{alertname=\"DeploymentStarted\"}"
      },
      {
        "name": "Critical Alerts",
        "enable": true,
        "iconColor": "red",
        "query": "ALERTS{severity=\"critical\"}"
      }
    ]
  }
}