{
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 1,
    "index": {
      "max_result_window": 10000
    },
    "analysis": {
      "analyzer": {
        "user_name_analyzer": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "asciifolding"
          ]
        },
        "autocomplete_analyzer": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "asciifolding",
            "autocomplete_filter"
          ]
        },
        "search_analyzer": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "asciifolding"
          ]
        }
      },
      "filter": {
        "autocomplete_filter": {
          "type": "edge_ngram",
          "min_gram": 2,
          "max_gram": 15
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "id": {
        "type": "keyword"
      },
      "email": {
        "type": "keyword"
      },
      "first_name": {
        "type": "text",
        "analyzer": "user_name_analyzer",
        "fields": {
          "raw": {
            "type": "keyword"
          },
          "autocomplete": {
            "type": "text",
            "analyzer": "autocomplete_analyzer",
            "search_analyzer": "search_analyzer"
          }
        }
      },
      "last_name": {
        "type": "text",
        "analyzer": "user_name_analyzer",
        "fields": {
          "raw": {
            "type": "keyword"
          },
          "autocomplete": {
            "type": "text",
            "analyzer": "autocomplete_analyzer",
            "search_analyzer": "search_analyzer"
          }
        }
      },
      "full_name": {
        "type": "text",
        "analyzer": "user_name_analyzer",
        "fields": {
          "autocomplete": {
            "type": "text",
            "analyzer": "autocomplete_analyzer",
            "search_analyzer": "search_analyzer"
          },
          "suggest": {
            "type": "completion"
          }
        }
      },
      "bio": {
        "type": "text",
        "analyzer": "standard"
      },
      "location": {
        "type": "keyword",
        "fields": {
          "text": {
            "type": "text",
            "analyzer": "standard"
          }
        }
      },
      "status": {
        "type": "keyword"
      },
      "role": {
        "type": "keyword"
      },
      "email_verified": {
        "type": "boolean"
      },
      "profile": {
        "properties": {
          "image_url": {
            "type": "keyword",
            "index": false
          },
          "phone": {
            "type": "keyword",
            "index": false
          },
          "date_of_birth": {
            "type": "date",
            "format": "strict_date"
          },
          "timezone": {
            "type": "keyword"
          },
          "language": {
            "type": "keyword"
          }
        }
      },
      "preferences": {
        "properties": {
          "categories": {
            "type": "keyword"
          },
          "locations": {
            "type": "keyword"
          },
          "interests": {
            "type": "keyword"
          },
          "price_range": {
            "properties": {
              "min": {
                "type": "scaled_float",
                "scaling_factor": 100
              },
              "max": {
                "type": "scaled_float",
                "scaling_factor": 100
              }
            }
          }
        }
      },
      "organizer_info": {
        "properties": {
          "is_organizer": {
            "type": "boolean"
          },
          "events_organized": {
            "type": "integer"
          },
          "total_attendees": {
            "type": "integer"
          },
          "average_rating": {
            "type": "float"
          },
          "verification_status": {
            "type": "keyword"
          },
          "specialties": {
            "type": "keyword"
          }
        }
      },
      "activity": {
        "properties": {
          "events_attended": {
            "type": "integer"
          },
          "events_favorited": {
            "type": "integer"
          },
          "reviews_written": {
            "type": "integer"
          },
          "last_login": {
            "type": "date",
            "format": "strict_date_time"
          },
          "login_count": {
            "type": "integer"
          },
          "engagement_score": {
            "type": "float"
          }
        }
      },
      "social": {
        "properties": {
          "facebook": {
            "type": "keyword",
            "index": false
          },
          "twitter": {
            "type": "keyword",
            "index": false
          },
          "linkedin": {
            "type": "keyword",
            "index": false
          },
          "instagram": {
            "type": "keyword",
            "index": false
          }
        }
      },
      "created_at": {
        "type": "date",
        "format": "strict_date_time"
      },
      "updated_at": {
        "type": "date",
        "format": "strict_date_time"
      },
      "indexed_at": {
        "type": "date",
        "format": "strict_date_time"
      }
    }
  }
}